@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div id="content_inner">



                    <div class="row">
                        <div class="span9">

                            <h2>Register Form</h2>

                            <div id="note"></div>
                            <div id="fields">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="inputName">Email:</label>
                                                <div class="controls">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                </div>
                                                <div class="controls">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="inputEmail">Password:</label>
                                                <div class="controls">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                </div>
                                                <div class="controls">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="inputPhone">Confirm Password:</label>
                                                <div class="controls">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                </div>
                                                <div class="controls">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <input type="submit" class="btn-inverse" value="Register" style="width: 100px; height: 50px" />
                                }
                            </div>

                        </div>
                        <div class="span3">

                            <h2>Usfull Info</h2>

                            <div class="thumb3">
                                <div class="thumbnail clearfix">
                                    <figure><img src="~/Content/images/contacts01.jpg" alt=""></figure>
                                    <div class="caption">
                                        <h3>Lorem ipsum dolor sit amet cons</h3>
                                        <p>
                                            Lorem ipsum dolor sit amet consectetuer adipi scing elraesent ves tibm moeacus.
                                            Aenean nonummy hendrerit mauris. Phasellus porta. Fusce suscipit varius mi. Cum sociis natoque penatibus et magnis dis parturientdiculus mus. Nulla dui.
                                        </p>
                                        <div class="line2"></div>
                                        <div class="text-right"><a href="#" class="button2">read more</a></div>
                                    </div>
                                </div>
                            </div>



                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

